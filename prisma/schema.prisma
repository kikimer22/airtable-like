// schema.prisma

datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

// ============================================================================
// Таблиця логів уведомлень
// ============================================================================
model NotificationLog {
  id        BigInt   @id @default(autoincrement())
  tableName String   @map("table_name") @db.VarChar(255)
  action    String   @db.VarChar(10) // INSERT, UPDATE, DELETE
  payload   Json
  createdAt DateTime @default(now()) @db.Timestamptz()

  @@index([createdAt(sort: Desc)])
  @@index([tableName])
  @@map("notification_logs_table")
}

// ============================================================================
// Приклад твої таблиці
// ============================================================================
model DataTable {
  id Int @id @default(autoincrement())

  // Boolean columns
  col_b_01 Boolean @default(false)
  col_b_02 Boolean @default(false)
  col_b_03 Boolean @default(false)
  col_b_04 Boolean @default(false)
  col_b_05 Boolean @default(false)
  col_b_06 Boolean @default(false)
  col_b_07 Boolean @default(false)
  col_b_08 Boolean @default(false)
  col_b_09 Boolean @default(false)
  col_b_10 Boolean @default(false)
  col_b_11 Boolean @default(false)

  // Numeric columns
  col_n_01 Int @default(0)
  col_n_02 Int @default(0)
  col_n_03 Int @default(0)
  col_n_04 Int @default(0)
  col_n_05 Int @default(0)
  col_n_06 Int @default(0)
  col_n_07 Int @default(0)
  col_n_08 Int @default(0)
  col_n_09 Int @default(0)
  col_n_10 Int @default(0)
  col_n_11 Int @default(0)

  // String columns
  col_s_01 String? @db.VarChar(255)
  col_s_02 String? @db.VarChar(255)
  col_s_03 String? @db.VarChar(255)
  col_s_04 String? @db.VarChar(255)
  col_s_05 String? @db.Text
  col_s_06 String? @db.VarChar(255)
  col_s_07 String? @db.Text
  col_s_08 String? @db.VarChar(255)
  col_s_09 String? @db.VarChar(255)
  col_s_10 String? @db.VarChar(255)
  col_s_11 String? @db.Text

  createdAt DateTime @default(now()) @db.Timestamptz()
  updatedAt DateTime @updatedAt @db.Timestamptz()

  @@map("data_table")
}
